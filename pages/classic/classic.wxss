/* pages/classic/classic.wxss */

.container {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.header {
	width: 100%;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	height: 100rpx;
	border-top: 1px solid #f5f5f5;
	border-bottom: 1px solid #f5f5f5;
}

.episode {
	margin-left: 20rpx;
	margin-top: 4rpx;
}

.like {
	margin-top: 6rpx;
}

.navig {
	position: absolute;
	bottom: 40rpx;
}

.like-container {
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	margin-right: 30rpx;
}

.share {
	width: 40rpx;
	height: 40rpx;
}

.share-btn {
	margin-top: 28rpx;
	margin-left: 10rpx;
}
