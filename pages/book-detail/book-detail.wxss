/* pages/book-detail/book-detail.wxss */

.container {
	width: 100%;
	background-color: #f5f5f5;
}

.head {
	background-color: #fff;
	padding-top: 40rpx;
	padding-bottom: 40rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.title {
	font-size: 38rpx;
	color: #2f2f2f;
	font-weight: 600;
	margin-top: 20rpx;
}

.author {
	font-size: 28rpx;
	color: #999;
}

.head image {
	width: 200rpx;
	height: 300rpx;
	box-shadow: 2px 2px 3px #e3e3e3;
}

.sub-container {
	width: 690rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 30rpx;
	margin-top: 30rpx;
	background-color: #fff;
}

.headline {
	font-size: 30rpx;
	color: #2f2f2f;
	font-weight: 600;
	margin-bottom: 20rpx;
}

.shadow {
	color: #999;
}

.com-container {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
}

.com-container x-tag {
	margin-right: 15rpx;
	margin-bottom: 10rpx;
}

.num {
	font-size: 22rpx;
	margin-left: 10rpx;
	color: #aaa;
}

/* .com-container > x-tag:nth-child(1) > view {
	background-color: #fffbdd;
}

.com-container > x-tag:nth-child(2) > view {
	background-color: #eefbff;
} */

.exter-tag1 {
	background-color: #fffbdd !important;
}

.exter-tag2 {
	background-color: #eefbff !important;
}

.content {
	text-indent: 56rpx;
	font-weight: 500;
}

.detail-container {
	width: 100%;
	font-size: 28rpx;
	color: #666;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	margin-bottom: 100rpx;
}

.vertical {
	display: flex;
	flex-direction: column;
}

.description {
	color: #999;
	margin-right: 40rpx;
}

.post-container {
	height: 100rpx;
	box-shadow: 1px -1px 1px #e3e3e3;
	position: fixed;
	bottom: 0;
	width: 690rpx;
	background-color: #fff;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	padding: 0 30rpx;
}

.post-fake {
	display: flex;
	flex-direction: row;
	align-items: center;
	height: 60rpx;
	width: 460rpx;
	border: 1px solid #999;
	border-radius: 15px;
	font-size: 22rpx;
	padding-left: 20rpx;
}

.like-container {
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
}

.like {
	margin-top: 10rpx;
	margin-right: 30rpx;
}

.posting-container {
	width: 100%;
	background-color: #fff;
	position: fixed;
	bottom: 0;
	z-index: 999;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.post-header {
	width: 100%;
	height: 100rpx;
	border-bottom: 1px solid #f5f5f5;
	border-top: 1px solid #f5f5f5;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
}

.post-header text {
	padding: 25rpx;
}

.post-header>text:first-child {
	font-size: 28rpx;
	color: #bbb;
}

.cancel {
	color: #666;
}

.posting-container .comment-container {
	width: 690rpx;
	padding: 40rpx 30rpx 0 30rpx;
}

.post {
	width: 690rpx;
	height: 56rpx;
	margin: 30rpx auto;
	padding-left: 25rpx;
	border-radius: 15px;
	background-color: #f5f5f5;
}




