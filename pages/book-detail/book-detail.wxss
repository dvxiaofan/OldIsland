}

.com-container > x-tag:nth-child(2) > view {
	background-color: #eefbff;
} */

.exter-tag1 {
	background-color: #fffbdd !important;
}

.exter-tag2 {
	background-color: #eefbff !important;
}

.content {
	text-indent: 56rpx;
	font-weight: 500;
}

.detail-container {
	width: 100%;
	font-size: 28rpx;
	color: #666;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	margin-bottom: 100rpx;
}

.vertical {
	display: flex;
	flex-direction: column;
}

.description {
	color: #999;
	margin-right: 40rpx;
}

